page {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
        -ms-flex-direction: column;
            flex-direction: column;
    height: 100%;
}

view {
    position: relative;
}

.floor {
    position: absolute;
    width: 100%;
    height: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.menu-list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 30rpx;
    border-width: 0;
    border-bottom-width: 1rpx;
    border-style: solid;
    border-color: #80808080;
    background-color: #fff;
    z-index: 1;
}

.preview {
    height: 100%;
    color: #A0A0A0;
    font-size: 32rpx;
}

.input {
    /*width: 0;*/
    flex-grow: 1;
}

.input-area {
    /*width: 100%;*/
    display: flex;
    padding: 20rpx;
    border-width: 0;
    border-bottom-width: 1rpx;
    border-style: solid;
    border-color: #80808080;
    /*margin: 20rpx 0;*/
    background-color: #fff;
    align-items: center;
}

.input-area-self {
    margin: 20rpx 0;
}

.input-name {
    margin-right: 30rpx;
}

.input-button {
    justify-content: center;
    color: rgb(50,120,15);
}

.warn-color {
    color: #c00;
}

.warn-size {
    font-size: 32rpx;
}