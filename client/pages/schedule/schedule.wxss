/* pages/schedule/schedule.wxss */

.top {
    display: flex;
    width: 100%;
    padding: 10rpx 0;
    justify-content: space-between;
    overflow: hidden;
    color: rgb(100,170,55);
}

.top-center {
    display: flex;
    flex-direction: column;
    text-align: center;
}

.semester {
    font-size: 25rpx;
}

.top-left {
    width: 20%;
}

.top-right {
    width: 20%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.bottom {
    width: 100%;
    height: 100rpx;
    background: blue;
}

.container {
    width: 100%;
    flex-grow: 1;
}

.floor {
    flex-direction: column;
}

.plus:before {
    content: "+";
    font-size: 75rpx;
    font-weight: 200;
    line-height: 1;

}

.date {
    display: flex;
    font-size: 25rpx;
    background-color: #FAFAFA;
    color: rgb(20,70,15);
}

.date-month {
    width: 10%;
    padding: 20rpx 0;
    text-align: center;
}

.date-day {
    flex-grow: 1;
    flex-shrink: 1;
    padding: 20rpx 0;
    text-align: center;
}

.today {
    font-weight: bold;
    background-color: rgb(200,240,180);
}

.schedule {
    height: 0;
    display: flex;
    flex-grow: 1;
    flex-shrink: 1;
    overflow-y: auto;
}

.schedule-time {
    width: 10%;
    font-size: 20rpx;
    text-align: center;
    background-color: #FAFAFA;
    color: rgb(20,70,15);
}

.schedule-time text {
    width: 100%;
    height: 100rpx;
    display: block;
    padding-top: 20rpx;
}

.schedule-class {
    position: relative;
    width: 0;
    flex-grow: 1;
    font-size: 21rpx;
}

.schedule-class-box {
    position: absolute;
    width:  14.285714285714%;
}

.schedule-class-content {
    width: calc(100% - 22rpx);
    height: calc(100% - 22rpx);
    display: inline-block;
    border-radius: 10rpx;
    padding: 5rpx;
    margin: 5rpx;
    color: #fff;
    /*background-color: rgb(100,170,55);*/
    box-shadow: -3rpx 3rpx 3rpx #40404080;
    overflow: hidden;
    /*word-break: break-all;*/
    word-wrap: break-word;
}

.not-this-week {
    color: #9BABBD;
    background-color: #EBEFF5;
}

.menu-background {
    background-color: #80808080;
    /*z-index: -1;*/
}

.menu-list {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    border: 1rpx soild #a0a0a0;
    background-color: #fff;
    z-index: 1;
}