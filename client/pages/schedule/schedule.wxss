/* pages/schedule/schedule.wxss */

page {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.top {
    display: flex;
    width: 100%;
    height: 100rpx;
    overflow: hidden;
}

.top-center {
    display: flex;
    height: 100%;
    flex-grow: 1;
    flex-direction: column;
    text-align: center;
}

.semester {
    font-size: 25rpx;
}

.top-left {
    height: 100%;
    width: 20%;
}

.top-right {
    height: 100%;
    width: 20%;
}

.bottom {
    width: 100%;
    height: 100rpx;
    background: blue;
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    flex-grow: 1;
}

.plus {
    display: flex;
    font-size: 100rpx;
    font-weight: 200;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.date {
    display: flex;
}

.date view {
    text-align: center;
    display: flex;
    flex-direction: column;
}

.day {
    flex-grow: 1;
    flex-shrink: 1;
}

#month {
    width: 10%;
}

.schedule {
    flex-grow: 1;
    overflow-y: auto;
}