/* pages/schedule/schedule.wxss */

page {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.top {
    display: flex;
    width: 100%;
    justify-content: space-between;
    overflow: hidden;
}

.top-center {
    display: flex;
    flex-direction: column;
    text-align: center;
}

.semester {
    font-size: 25rpx;
}

.top-left {
    width: 20%;
}

.top-right {
    width: 20%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.bottom {
    width: 100%;
    height: 100rpx;
    background: blue;
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    flex-grow: 1;
}

.plus:before {
    content: "+";
    font-size: 75rpx;
    font-weight: 200;
    line-height: 1;

}

.date {
    display: flex;
    padding: 20rpx 0;
    font-size: 25rpx;
}

.date-month {
    width: 10%;
    text-align: center;
}

.date-day {
    flex-grow: 1;
    flex-shrink: 1;
    text-align: center;
}

.schedule {
    height: 0;
    display: flex;
    flex-grow: 1;
    flex-shrink: 1;
    overflow-y: auto;
}

.schedule-time {
    width: 10%;
    font-size: 20rpx;
    text-align: center;
}

.schedule-time text {
    width: 100%;
    height: 120rpx;
    display: block;
}

.schedule-class {
    position: relative;
    width: 0;
    flex-grow: 1;
    font-size: 24rpx;
}

.schedule-class-box {
    position: absolute;
    width:  14.285714285714%;
}

.schedule-class-content {
    width: calc(100% - 12rpx);
    height: calc(100% - 12rpx);
    display: inline-block;
    border-radius: 10rpx;
    padding: 5rpx;
    background-color: rgb(100,170,55);
    overflow: hidden;
}