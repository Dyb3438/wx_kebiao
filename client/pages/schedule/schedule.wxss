/* pages/schedule/schedule.wxss */

page {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.top {
    display: flex;
    top: 0;
    width: 100%;
    height: 100rpx;
    overflow: hidden;
}

.bottom {
    /* position: relative; */
    /* bottom: 0; */
    width: 100%;
    height: 100rpx;
    background: blue;
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    flex-grow: 1;
}

.center {
    display: flex;
    height: 100%;
    flex-grow: 1;
    flex-direction: column;
    text-align: center;
}

.left {
    height: 100%;
    width: 20%;
}

.right {
    height: 100%;
    width: 20%;
}

.week {
    display: flex;
    flex-direction: column;
}

.plus {
    display: flex;
    font-size: 100rpx;
    font-weight: 200;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.date {
    display: flex;
}

.date view {
    text-align: center;
    display: flex;
    flex-direction: column;
}

.day {
    flex-grow: 1;
    flex-shrink: 1;
}

#month {
    width: 10%;
}

.schedule {
    flex-grow: 1;
    overflow-y: auto;
}