/* pages/schedule/schedule.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.top {
  display: flex;
  top: 0;
  width: 100%;
  height: 40px;
  overflow: hidden;
}

.bottom {
  position: relative;
  bottom: 0;
  width: 100%;
  height: 40px;
  background: blue;
}

.container {
  width: 100%;
  flex-grow: 1;
}

.center {
   display: flex; 
  height: 100%;
  flex-grow: 1;
  flex-direction: column;
  background: greenyellow;
  text-align: center;
}

.left {
  height: 100%;
  width: 20%;
  background: greenyellow;
}

.right {
  height: 100%;
  width: 20%;
  background: greenyellow;
}

.time {
  display: flex;
  flex-direction: column;
}

.plus {
  display: flex;
  font-size: 40px;
  font-weight: 200;
  justify-content: center;
  align-items: center;
  height: 100%;
}