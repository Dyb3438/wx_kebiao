<!--pages/schedule/schedule.wxml-->
<view class='top'>
    <view class='top-left'></view>
    <view class='top-center'>
        <text>第{{thisWeek}}周</text>
        <text class="semester">{{semester}}</text>
    </view>
    <view class='top-right'>
        <view class='plus'>+</view>
    </view>
</view>
<view class='container'>
    <view class='date'>
        <view id='month'>
            <text>{{month}}</text>
            <text>月</text>
        </view>
        <block wx:for='{{date}}' wx:key="day">
            <view class='day'>
                <text>{{item.day}}</text>
                <text>{{item.date}}</text>
            </view>
        </block>
    </view>
    <view class='schedule'>
        <view class=''></view>
    </view>
</view>
<view class='bottom'></view>